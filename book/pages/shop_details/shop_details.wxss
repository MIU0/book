/* --------------------------- */

.book-title {
  width: 100%;
  font-size: 30rpx;
  color: #383838;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.book-script {
  font-size: 28rpx;
  color: #999;
  padding: 0 0 10rpx 10rpx;
  box-sizing: border-box;
}

.book-price {
  width: 100%;
  overflow: hidden;
  margin-top: 14rpx;
  padding-top: 10rpx;
}

.book-price .book-price-left {
  float: left;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.book-price .book-price-left view:first-child {
  font-size: 30rpx;
  font-weight: 350;
  color: #e24d51;
}

.book-price .book-price-left view:last-child {
  font-size: 28rpx;
  text-decoration: line-through;
  color: #ccc;
}

.book-price .book-price-right {
  float: right;
  font-size: 24rpx;
  color: #fd3939;
  font-weight: 350;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #fd3939;
  border-radius: 6rpx;
  margin-right: 20rpx;
  /* overflow: ; */
}

.book-price .book-price-right image {
  width: 27rpx;
  height: 25rpx;
  display: inline-block;
  flex-direction: row;
  vertical-align: middle;
  margin-right: 10rpx;
}

.book-price .book-price-right text {
  display: inline-block;
  flex-direction: row;
  vertical-align: middle;
}

.book-message {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  margin-bottom:10rpx; 
}

.book-message view {
  font-size: 24rpx;
  color: #999;
}

