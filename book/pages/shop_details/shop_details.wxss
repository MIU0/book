}

/* ---------------------- */

.introduce {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.introduce .introduce-top {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #f9f7f7;
  overflow: hidden;
}

.introduce .introduce-top image:first-child {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 10rpx 0 0;
}

.introduce .introduce-top image:last-child {
  width: 30rpx;
  height: 30rpx;
  float: right;
  opacity: 0.5;
  margin-top: 45rpx;
}

.introduce .introduce-top text:nth-child(3) {
  background-color: #ff4749;
  font-size: 24rpx;
  color: white;
  border-radius: 10rpx;
  margin: 0 15rpx;
  padding: 4rpx 12rpx;
}

.introduce .introduce-bottom {
  font-size: 28rpx;
  overflow: hidden;
  
}

.introduce .introduce-bottom .introduce-bottom-top image {
  width: 30rpx;
  height: 30rpx;
  float: right;
  opacity: 0.5;
}

.introduce .introduce-bottom image {
  width: 20rpx;
  height: 20rpx;
}

.introduce .introduce-bottom .introduce-bottom-top {
  padding: 10rpx 0 10rpx 0;
  box-sizing: border-box;
}
.introduce-bottom-bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.introduce .introduce-bottom .introduce-bottom-bottom view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 20rpx 20rpx 0;
  font-size: 22rpx;
  color: #8d8d8d;
}

.introduce .introduce-bottom .introduce-bottom-bottom view image {
  margin-right: 5rpx;
}

