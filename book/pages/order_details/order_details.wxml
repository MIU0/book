<view>
  <!-- 顶部 -->
  <view class='order_status_top'>
    <view class='status_top'>
      <view class='status_top_img'>
        <image src='../../images/order_status.png'></image>
      </view>
      <view class='status_top_right'>
        <view class="status_top_right_top ">商家已发货</view>
        <view class="status_top_right_top right_bottom">还剩2天自动确认完成</view>
      </view>
    </view>
    <view class='status_bottom'>
      <view class='status_bottom_name'>
        <view class="status_name" data-current='0'>买家付款</view>
        <view class="status_name" data-current='1'>商家发货</view>
        <view class="status_name" data-current='2'>交易完成</view>
      </view>
      <view class='status_bottom_line'>
        <view class="status_bottom_line_one"></view>
        <view class="status_bottom_line_two"></view>
        <view class="status_bottom_line_one select"></view>
        <view class="status_bottom_line_two"></view>
        <view class="status_bottom_line_one"></view>
      </view>
    </view>
  </view>
  <!-- 订单内容 -->
  <view class='order_content'>
    <view class='store_name'>
      <image src='../../images/order_home.png'></image>
      <view>孪生艺术</view>
    </view>
    <view class='order_content_list' wx:for='{{order_content}}'>
      <view class='order_content_list_left'>
        <image src='{{item.img}}' mode='widthFix'></image>
      </view>
      <view class='order_content_list_center'>
        女青年色彩头像示范
      </view>
      <view class='order_content_list_right'>
        <text>￥0.50</text>
        <text>x1</text>
      </view>
    </view>
    <view class='order_sumprice'>
      <text>商品小计：</text>
      <text class='sum_price'>￥0.50</text>
    </view>
  </view>
  <!-- 留言 -->
  <view class="order_sumprice order_leave">
    <text class='leave_title'>买家留言</text>
    <view class='leave_con'>无</view>
  </view>
  <!-- 商品金额 -->
  <view class="order_sumprice order_real_price">
    <text class='leave_title'>商品金额</text>
    <view class='leave_con'>￥0.50</view>
  </view>
  <!-- 付款方式 -->
  <view class="order_sumprice order_style">
    <text class='leave_title'>付款方式:</text>
    <view class='leave_con'>微信支付</view>
  </view>
  <!-- 合计 -->
  <view class='all_price'>
    <text>合计：</text>
    <text class='all_price_color'>￥0.50</text>
  </view>
  <!-- 客服 -->
  <view class='online_chat'>
    <view class='online_chat_ku'>
      <image src='../../images/online_img.png'></image>
      <view class='online_color'>在线客服</view>
    </view>
  </view>
  <!-- 订单编号 -->
  <view class='order_number'>
  <view class="order_number_list">
  <text>订单编号：</text>
  <text>E20181031181205038100026</text>
<text class='num_copy'>复制</text>
  </view>
   <view class='order_number_list'>
  <text>创建时间：</text>
  <text>2018-10-31 18:12:05</text>
  </view>
   <view class='order_number_list'>
  <text>付款时间：</text>
  <text>2018-10-31 18:12:25</text>
  </view>
   <view class='order_number_list'>
  <text>发货时间：</text>
  <text>2018-10-31 18:12:28</text>
  </view>

<view class='order_question'>对此订单有疑问？</view>

  </view>
  <!-- 底部信息 -->
   <view class='company_remark'>由薇明科技提供技术支持</view>
</view>