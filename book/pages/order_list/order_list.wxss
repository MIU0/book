/* 无订单 */
.no_order{
  width: 40%;
  /* height: 200rpx; */
  /* border: 1px solid red; */
  margin: 0 auto;
  margin-top: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no_order_top{
  color: #6a6a6a;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.no_order_center{
  color: #989898;
  font-size: 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-bottom: 35rpx;
}
.no_order_bottom{
    color: #e16d20;
    width: 195rpx;
    text-align: center;
  font-size: 28rpx;
  border: 1px solid #e16d20;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
}
/* ----------- */
.order_list{
  width: 100%;
  height: 400rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order_list_top{
  width: 96%;
  height: 60rpx;
  margin-top: 15rpx;
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order_list_top_left{
  font-size: 28rpx;
}
.order_list_top_right{
  font-size: 28rpx;
  color: #e57416;
}
.order_list_top_num{
  width: 96%;
  font-size: 26rpx;
  color: #afafaf;
}
.order_list_content{
  margin-top: 15px;
  width: 96%;
  height: 200rpx;
  border: 1px solid red;
}